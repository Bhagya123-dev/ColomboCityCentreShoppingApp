<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="fontFamily">@font/barlow_regular</item>
        <item name="colorPrimary">@color/text_grey</item>
        <item name="colorPrimaryDark">@color/text_grey</item>
        <item name="colorAccent">@color/text_grey</item>

        <item name="colorControlNormal">@color/text_grey</item>
        <item name="colorControlActivated">@color/text_grey</item>
        <item name="colorControlHighlight">@color/text_grey</item>
    </style>

    <style name="styleTextBlack">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_medium</item>
    </style>

    <style name="styleTextGrey">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text_light_grey</item>
        <item name="android:textSize">@dimen/text_medium</item>
    </style>

    <style name="styleTextWhite">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_medium</item>
        <item name="android:textColorHint">@color/white</item>
    </style>

    <style name="styleTextGreen">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text_green</item>
        <item name="android:textSize">@dimen/text_medium</item>
    </style>

    <style name="styleTextRed">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text_red</item>
        <item name="android:textSize">@dimen/text_small</item>
    </style>

    <style name="styleButtonGreen" parent="@style/AppTheme">
        <item name="android:layout_width">@dimen/_184sdp</item>
        <item name="android:layout_height">@dimen/_40sdp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_small</item>
        <item name="android:background">@color/text_green</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="FullScreenDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@android:color/white</item>
    </style>
</resources>